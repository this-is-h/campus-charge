{
    "functions": {
        "api/php/*.php": {
            "runtime": "vercel-php@0.7.0",
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "rewrites": [
        { "source": "/charge/:match*", "destination": "/:match*" },
        { "source": "/api/:match*", "destination": "/api/php/:match*" },
        { "source": "/([^/]*)", "destination": "/error/403", "statusCode": 403 }
    ],
    "build": {
        "env": {
            "NOW_BUILDER_DEBUG": "1"
        }
    },
    "trailingSlash": true
}