{
    "functions": {
        "api/php/*.php": {
            "runtime": "vercel-php@0.7.0",
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "rewrites": [
        { "source": "/main", "destination": "/main.html" },
        { "source": "/main/:page", "destination": "/main.html" },
        { "source": "/api/:match*", "destination": "/api/php/:match*" },
        { "source": "/([^/]*)", "destination": "/error/403", "statusCode": 403 }
    ],
    "trailingSlash": false
}